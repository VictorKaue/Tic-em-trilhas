// Criar um programa que ordena os
// elementos de um vetor em ordem crescente
// usando o algoritmo Bubble Sort.

#include <stdio.h>
#include <locale.h>

void printArray(int vetor[], int n){
    int i;
    for (i = 0; i < n; i++)
    {
        printf("Valod do vetor na posição de índice %d: %d ", i, vetor[i]);
    }
    
}

int main(){
    setlocale(LC_ALL, "Portuguese");
    int vetor[5] = {15,23,35,1,18}, i, j, aux;
    int n = sizeof(vetor) / sizeof(vetor[0]);
    printf("%d", n);
    for (i = 0; i < n; i++)
    {
        for (j = 0; j < n; j++)
        {
            if (vetor[j] > vetor[j+1])
            {
                aux = vetor[j];
                vetor[j+1] = vetor[j];
                vetor[j+1] = aux;
            }
        }
    }
    return 0;
}
