// Criar um programa que ordena os
// elementos de um vetor em ordem crescente
// usando o algoritmo Bubble Sort.

#include <stdio.h>
#include <locale.h>

void bubblesort(int *vetor, int n){
	int i, j, aux;
	for (i = 0; i < n-1; i++)
    {
        for (j = 0; j < n-1; j++)
        {
            if (vetor[j] > vetor[j+1])
            {
				aux = vetor[j];
				vetor[j] = vetor[j+1];  
				vetor[j+1] = aux;
			}
        }
    }
}

void printArray(int vetor[], int n){
    int i;
    for (i = 0; i < n; i++)
    {
        printf("Valod do vetor na posição de índice %dº: %d\n", i, vetor[i]);
    }
    
}

int main(){
    setlocale(LC_ALL, "Portuguese");
    int vetor[5] = {45,23,35,1,18}, i, j, aux;
    int n = sizeof(vetor) / sizeof(vetor[0]);
    bubblesort(vetor,n);
    printArray(vetor, n);
    return 0;
}
